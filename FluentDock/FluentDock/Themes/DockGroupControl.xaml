<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:pr="clr-namespace:FluentDock.Primitives"
                    xmlns:fd="clr-namespace:FluentDock">
    <Style x:Key="{x:Type fd:DockGroupControl}" TargetType="{x:Type fd:DockGroupControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type fd:DockGroupControl}">
                    <pr:SplitterItemsPanel IsItemsHost="True"
                                           Orientation="{TemplateBinding Orientation}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>